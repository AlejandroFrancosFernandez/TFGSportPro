<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".features.f01_Home.fragments.trainingPage.trainingLevels.RoutineSummaryActivity"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- Bloque superior: Header -->
    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/navigationgrey"
        android:orientation="horizontal"
        android:padding="10dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- Botón / ícono de retroceso -->
        <ImageView
            android:id="@+id/b_back"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_gravity="center_vertical"
            android:padding="5dp"
            android:contentDescription="blabla"
            android:src="@drawable/comebackicon"
            android:tint="@android:color/white" />

        <!-- Texto central: "SportPro" -->
        <TextView
            android:id="@+id/tv_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:gravity="center"
            android:text="SportPro"
            android:textColor="@android:color/white"
            android:textSize="18sp"
            android:textStyle="bold" />

        <!-- Texto de día en la derecha -->
        <TextView
            android:id="@+id/tv_infoday"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:text="Day X"
            android:textColor="@android:color/white"
            android:textSize="16sp"
            android:textStyle="bold" />
    </LinearLayout>

    <!-- Contenedor con Scroll (para todos los datos de la rutina) -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/linearLayout"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:padding="10dp">

        <!-- Contenedor principal en vertical -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- SECCIÓN: Info general (nivel, estrellas, detalles, etc.) -->
            <LinearLayout
                android:id="@+id/generalInfo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="10dp"
                android:layout_marginBottom="10dp"
                android:background="@drawable/rounded_border">

                <!-- Fila: Nivel + estrellas (ejemplo con 3 estrellas) -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <TextView
                        android:id="@+id/tvLevel"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Low"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:textColor="@android:color/black" />

                    <Space
                        android:layout_width="8dp"
                        android:layout_height="wrap_content" />

                    <!-- Estrellas de ejemplo -->
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                </LinearLayout>

                <!-- Texto con resumen de la rutina (nivel, # ejercicios, tiempo) -->
                <TextView
                    android:id="@+id/tvRoutineDetails"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:text="Aquí irá la info de la rutina"
                    android:textSize="14sp" />

                <!-- Texto con # total de ejercicios (lo usas en tu código) -->
                <TextView
                    android:id="@+id/tvExerciseList"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:text="Total de ejercicios: 0"
                    android:textSize="14sp" />
            </LinearLayout>

            <!-- SECCIÓN: Calentamiento -->
            <LinearLayout
                android:id="@+id/warmUpExercises"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="10dp"
                android:layout_marginBottom="10dp"
                android:background="@drawable/rounded_border">

                <TextView
                    android:id="@+id/tvWarmUp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Ejercicios de Calentamiento"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <!-- Aquí se cargarán los ejercicios de calentamiento -->
                <TextView
                    android:id="@+id/tvWarmUpDetails"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:text="(Warm Up dinámico)"
                    android:textSize="14sp" />
            </LinearLayout>

            <!-- SECCIÓN: Ejercicios principales -->
            <LinearLayout
                android:id="@+id/otherExercises"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="10dp"
                android:layout_marginBottom="10dp"
                android:background="@drawable/rounded_border">

                <TextView
                    android:id="@+id/tvOtherExercises"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Ejercicios siguientes"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <!-- Aquí se cargarán los ejercicios principales -->
                <TextView
                    android:id="@+id/tvOtherExerciseDetails"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:text="(Main Exercises dinámico)"
                    android:textSize="14sp" />
            </LinearLayout>

            <!-- Botón de inicio de rutina (si lo deseas) -->
            <Button
                android:id="@+id/btnStartRoutine"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="bla"
                android:textSize="16sp"
                android:textColor="@android:color/white"
                android:backgroundTint="@color/gray"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="16dp"
                android:textAllCaps="false"/>
        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>
